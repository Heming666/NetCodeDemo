@model IEnumerable<Repository.Entity.Models.Consume.ConsumeEntity>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row-fluid section">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">消费列表</div>
            <div class="muted pull-right"><a asp-action="Create">新增</a></div>
        </div>
        <div class="block-content collapse in">
            <div class="span12">
                <form method="post" asp-action="Index">
                    <div class="span2">
                        <label for="Classify" class="control-label"></label>
                        <select id="Classify" name="Classify" asp-items="Html.GetEnumSelectList<Repository.Entity.Models.Consume.Classify>()" data-live-search="true"> <option value="">==全部==</option></select>
                    </div>
                    <div class="span1">
                        <button class="btn btn-primary btn-outline-success my-2 my-sm-0" type="submit">查询</button>
                    </div>
                </form>
            </div>
            <div class="span12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ConsumeName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Amount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Place)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Remark)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Classify)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LogTime)
                            </th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ConsumeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Place)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Remark)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Classify)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LogTime)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /block -->
</div>

