@{ 
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
<div class="container" id="login">
    <form class="form-signin text-center" action="index.html">
        <h2 class="form-signin-heading">登录</h2>
        <input type="text" name="Account" class="input-block-level" placeholder="用户名">
        <input type="password" name="PassWord" class="input-block-level" placeholder="密码">
        <label class="checkbox" style="text-align:left;">
            <input type="checkbox" name="IsRememberMe" value="remember-me"> 记住密码
        </label>
        <button class="btn btn-large btn-primary" ; type="submit">登录</button>
        <a asp-action="Register">注册</a>
    </form>
</div> <!-- /container -->