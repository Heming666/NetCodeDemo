@using Repository.Entity.Models.Base;
@model UserEntity;
@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
    List<DepartmentEntity> depts = ViewBag.Depts;
    
}
@section scripts{

}
<form class="form-horizontal">
    <div class="form-group">
        <label asp-for="Account" class="col-sm-5 control-label"></label>
        <div class="col-sm-2">
            <input asp-for="Account" required class="form-control" placeholder="6至24位" />
            <span asp-validation-for="Account" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PassWord" class="col-sm-5 control-label"></label>
        <div class="col-sm-2">
            <input asp-for="PassWord" required class="form-control" placeholder="6至24位">
            <span asp-validation-for="PassWord" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="UserName" class="col-sm-5 control-label"></label>
        <div class="col-sm-2">
            <input asp-for="UserName" required class="form-control" placeholder="">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="col-sm-5 control-label"></label>
        <div class="col-sm-2">
            <select asp-items="Html.GetEnumSelectList<Gender>()" class="form-control" asp-for="Gender"></select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="col-sm-5 control-label"></label>
        <div class="col-sm-2">
            <input asp-for="Phone"  class="form-control input-file uniform_on" type="file" accept="image/*" placeholder="">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="DeptId" class="col-sm-5 control-label"></label>
        <div class="col-sm-2">
            <select asp-items="@(new SelectList(depts,"ID","DeptName"))" required class="form-control" asp-for="DeptId"></select>
            <span asp-validation-for="DeptId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Photo" class="col-sm-5 control-label"></label>
        <div class="col-sm-2">
            <input asp-for="Photo"   class="form-control" placeholder="">
            <input  asp-for="CreateDate" hidden/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-2">
            <button type="submit" class="btn btn-default">Sign in</button>
        </div>
    </div>
</form>